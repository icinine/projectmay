<h1>Listing of Departments</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @depts.each do |dept| %>
      <tr>
        <td><%= dept.name %></td>
        <td><%= link_to 'Show', dept, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_dept_path(dept), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', dept, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

