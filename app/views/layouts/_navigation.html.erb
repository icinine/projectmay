<header class="navbar navbar-fixed-top navbar-default">
  
    <div class="container">
    	<div id="logo">
    	<%= image_tag("/Logo_Design_Templates_Pack_1.png", :alt => "logo") %>
    	</div>
    	<div class="nav-item">
    	    <%= link_to 'Home', root_path, class: 'btn btn-default btn-success' %>
    	    
    	</div>
    	
    
        <ul class='nav_ul_item'>
            
        	<li class="dropdown">
                <%= link_to '#', class: 'btn btn-default btn-danger dropdown-toggle', 'data-toggle' => 'dropdown' do %>
                    Agreements <b class="caret"></b>
                <% end %>
                <ul class="dropdown-menu">
                   <%= AgreementType.all.each do |agreement_type| %>
                   <li><%= link_to agreement_type.name, agreement_type_path(agreement_type) %></li>
                   <% end %>
                  <% if logged_in? %>
              <li class="divider"></li>
              <li>
                <%= link_to(new_agreement_type_path) do %>
                  New Agreement
                <% end %> 
              </li>
              <% end %>
                </ul>
            </li>
        </ul>
       
         <ul class='nav_ul_item'>
        	<li class="dropdown">
            <%= link_to "#", class: "btn btn-default border-blue dropdown-toggle", "data-toggle" => "dropdown" do %>
                    Regions <b class="caret"></b>
                <% end %>
                <ul class="dropdown-menu">
                   <%= Region.all.each do |region| %>
                   <li><%= link_to region.name, region_path(region) %></li>
                   <% end %>
                   <% if logged_in? %>
              <li class="divider"></li>
              <li>
                <%= link_to(new_region_path) do %>
                  New Region
                <% end %> 
              </li>
              <% end %>
                </ul>
            </li>
        </ul>
         <% if logged_in? and current_user.admin? %>
          <div class='nav_item'>
        	<%= link_to "New Department", new_dept_path, class: "btn btn-default btn-warning" %>
        </div>
         <% end %>
       <% if logged_in? %>
        <div class='nav_item'>
        	<%= link_to "New Contract", new_contract_path, class: "btn btn-default btn-warning" %>
        </div>
        
        
        <ul class="nav_item">
            <li class="dropdown">
                <%= link_to '#', class: 'btn btn-default btn-danger dropdown-toggle', 'data-toggle' => 'dropdown' do %>
                    <%= current_user.username %> <b class="caret"></b>
                <% end %>
                <ul class="dropdown-menu">
                    <li><%= link_to 'View Profile', user_path(current_user) %>  </li>
                    <li><%= link_to 'Edit Profile', edit_user_path(current_user) %>  </li>
                    <li class="divider"></li>
                    <li><%= link_to 'Logout', logout_path %></li>
                </ul>
            </li>
        </ul>
        <% else %>
        <div class="nav_item">
            <%= link_to 'Login', login_path, class: 'btn btn-default btn-success' %>
            
        </div>
        
        
        <% end %>
        
    	
    
    </div>
  
</header>