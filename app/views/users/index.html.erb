<%= render 'shared/page_title', title: 'All Users' %>

<ul class ="nav nav-tabs">
    <li>
        <%= link_to 'Contracts', contracts_path %>
    </li>
    <li class="active">
        <%= link_to 'Users', users_path %>
    </li>
    
</ul>

<div class ="row">
<table class="table table-hover">
    
    <thead>
        <tr>
            <th>Avatar</th>
            <th>Username</th>
            <th>Email</th>
             <% if logged_in? and current_user.admin? %>
            <th>Delete User</th>
            <% end %>
        </tr>
        
    </thead>
    
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td> <%= link_to gravatar_for(user, size: 80), user_path(user) %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <% if logged_in? and current_user.admin? %>
                <td><%= link_to 'Destroy', user, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
                <% end %>
            </tr>
        
        <% end %>
        
    </tbody>
    
</table>
</div>

<div class ="row">
    <div class="col-md-4 col-md-offset-4 center">
        <%= will_paginate %>
        
    </div>
</div>
