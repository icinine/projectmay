<h1>Listing suppliers</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.phone %></td>
        <td><%= supplier.email %></td>
        <td><%= link_to 'Show', supplier, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', supplier, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Supplier', new_supplier_path, class: "btn btn-danger" %>
